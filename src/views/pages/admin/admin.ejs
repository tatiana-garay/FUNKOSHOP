<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin | Funkoshop</title>
    <link rel="stylesheet" href="../../css/index.css">
    <link rel="icon" href="../../multimedia/branding/isotype.svg">
</head>
<body class="grid-fixed">

    <%- include('../../partials/header')%>
    


    <main id="admin" class="container">
        <section class="admin__search">
            <iconify-icon class="admin__icon" icon="charm:search"></iconify-icon>
            <input class="admin__search-bar" type="text" name="search" id="search" placeholder="código, nombre o categoria">
        </section>
        <section class="admin__list">
            <div class="admin__header">
                <h2>LISTADO DE PRODUCTOS</h2>
                <span>AGREGAR<a href="../admin/create.html"><iconify-icon icon="bxs:plus-square" style="color: #f33;"></iconify-icon></a></span>
            </div>
            <div class="admin-table">
                <header class="admin-table__header">
                    <h3>ID</h3>
                    <h3>Código</h3>
                    <h3>Nombre del Producto</h3>
                    <h3>Categoría</h3>
                </header>
                <% data.forEach(product => { %>
                    <article class="admin-table__row">
                        <p><%= product.Product_id %></p>
                        <p><%= product.Sku %></p>
                        <p><%= product.Product_name %></p>
                        <p><%= product.category_name %></p>
                        <a href="admin/edit/<%= product.Product_id %>"><iconify-icon icon="mdi:pencil" style="color: #1d84b5;"></iconify-icon></a>
                        <a href=""><iconify-icon icon="heroicons-solid:trash" style="color: #f33;"></iconify-icon></a>
                    </article>
                <% }); %>
            </div>
        </section>
    </main>

    <%- include('../../partials/footer')%>


    <script src="https://cdn.jsdelivr.net/npm/iconify-icon@1.0.7/dist/iconify-icon.min.js"></script>
</body>
</html>